configuration {
	font:							"JetBrainsMono Nerd Font Mono 18";
  show-icons:                     true;
	icon-theme: 					"Papirus";
  display-drun: 					"ï…€";
  drun-display-format:            "{name}";
  disable-history:                false;
  fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

@import "colors.rasi"

window {
  transparency:                   "real";
  background-color:               @bg;
  text-color:                     @fg;
	border:							0px 0px 0px 0px;
	border-color:					          @ac;
  border-radius:                  0px;
	width:							            800px;
  location:                       north;
  x-offset:                       0;
  y-offset:                       100;
}

prompt {
  enabled: 						true;
	padding: 						0px 20px 0px 20px;
	background-color: 				#9ece6a;
	text-color: 					#1a1b26;
	font:							"JetBrainsMono Nerd Font Mono 40";
}

entry {
    background-color:               @hibg;
    text-color:                     #9aa5ce;
    placeholder-color:              #9aa5ce;
    expand:                         true;
    placeholder:                    "Search...";
	  padding: 						            20px;
    blink:                          true;
}

inputbar {
	children: 						[ prompt, entry ];
    background-color:               #62658f;
    text-color:                     @fg;
    expand:                         false;
	border:							0px;
    border-radius:                  0px;
	border-color:					#62658f;
    margin:                         0px;
    padding:                        0px;
}

listview {
    background-color:               @bg;
    padding:                        0px;
    columns:                        1;
    lines:                          8;
    spacing:                        6px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @bg;
	  border:							            0px;
    border-radius:                  0px;
	  border-color:					          @bg;
    children:                       [ inputbar, listview ];
    spacing:                       	6px;
    padding:                        6px;
}

element {
    background-color:               @bg;
    text-color:                     @fga;
    orientation:                    horizontal;
    border-radius:                  0px;
	  padding: 						            15px;
}

element-icon {
    size:                           40px;
    border:                         0px;
    background-color:               @bg;
    padding:                        0px 12px 0px 0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0.5;
    margin:                         0px 2.5px 0px 2.5px;
    background-color:               @bg;
    text-color:                     #9aa5ce;
}

element selected {
    background-color:               @hibg;
    text-color:                     @fga;
	  border:							0px 0px 0px 0px;
    border-radius:                  0px;
    border-color:                  	@ac;
}

element-text selected {
  background-color: @hibg;
}

element-icon selected {
  background-color: @hibg;
}
